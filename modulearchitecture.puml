@startuml
database "HANA" {
  folder "SBODEMOUS" {
	[OITM]
  }
  frame "COMPANY DB" {
	[OCLG]
  }
}

cloud {
  ServiceLayer - [SAP B1]
  [SAP B1] .u.> [OITM]
}
package "model" {
  [LoggedInUser]
}
package "b1s" {
  [LoginDataSource] - ILoginDS
  [LoginDataSource] ..> ServiceLayer
  [LoginDataSource] ..> [LoggedInUser]
  [Repository] ..> [LoginDataSource]
  [Repository] - getLoginDS
  getLoginDS ..> ILoginDS
}
package "vm" {
  [AppViewModel] - ILoginVM
  [AppViewModel] ..> [LoggedInUser]
  [AppViewModel] ..> getLoginDS
  [ViewModelFactory] - getLoginVM
  [ViewModelFactory] ..>[AppViewModel]
  getLoginVM ..> ILoginVM
}
package "app" {
  [LoginActivity] ..> [LoggedInUser]
  [LoginActivity] .u.> [ILoginVM]
  [LoginActivity] .u.> [getLoginVM]
  [MainActivity]
}

@enduml